<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:orientation="vertical"
    android:background="#83D686"
    android:layout_height = "wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width = "match_parent"
    android:layout_margin="10dp"
    android:elevation="5dp"
    android:layout_height = "wrap_content" >
    <LinearLayout
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical">
            <TextView
                android:id = "@+id/user_name"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center"
                android:textColor = "#000"
                android:textSize = "20sp" /><View
        android:id = "@+id/view8"
        android:layout_width = "match_parent"
        android:layout_height = "10dp" /><TextView
        android:id = "@+id/phone_user"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:gravity = "center"
        android:textColor = "#000"
        android:textSize = "20sp" /><Button
    android:id = "@+id/but_loc_user"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:drawableEnd = "@drawable/ic_location"
    android:text = "@string/the_location" /></LinearLayout>
</androidx.cardview.widget.CardView><View
    android:id = "@+id/view7"
    android:layout_width = "match_parent"
    android:background="#fff"
    android:layout_height = "20dp" /></LinearLayout>